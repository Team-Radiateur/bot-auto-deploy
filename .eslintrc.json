{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ],
  "parser": "eslint",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      0
    ],
    "import/prefer-default-export": "off",
    "no-use-before-define": [
      "off"
    ],
    "prefer-destructuring": "error",
    "space-in-parens": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "no-unused-vars": "off",
    "quotes": [
      "error",
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "no-tabs": [
      "error",
      {
        "allowIndentationTabs": true
      }
    ]
  }
}
